pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                echo 'Build Hello World'
            }
        }
         stage('Test') {
            steps {
                echo ' Test Hello World'
            }
        }
         stage('Deploy') {
            steps {
                echo 'Deploy Hello World'
            }
        }
    }
    post{
        always{
          emailext body: 'pipeline status', subject: 'pipeline status', to: 'mahesh.vonteru@gmail.com'  
        }
    }
}
